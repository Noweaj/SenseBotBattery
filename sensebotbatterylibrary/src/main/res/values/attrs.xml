<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="SenseBotBatteryMeter">
        <attr name="battery_meter_progress" format="float"/>
        <attr name="battery_meter_max" format="integer"/>

        <attr name="battery_meter_unfinished_color" format="color"/>
        <attr name="battery_meter_finished_color" format="color"/>

        <attr name="battery_meter_title_box_color" format="color"/>
        <attr name="battery_meter_product_box_color" format="color"/>

        <attr name="battery_meter_finished_stroke_width" format="dimension"/>
        <attr name="battery_meter_unfinished_stroke_width" format="dimension"/>

        <attr name="battery_meter_title_text_size" format="dimension"/>
        <attr name="battery_meter_percent_text_size" format="dimension"/>

        <attr name="battery_meter_title_box_height" format="float" />
        <attr name="battery_meter_product_box_height" format="float"/>

        <attr name="battery_meter_starting_degree" format="integer"/>
        <attr name="battery_meter_show_title_text" format="boolean"/>
        <attr name="battery_meter_show_percent_text" format="boolean"/>

        <attr name="battery_meter_title_text" format="string"/>
        <attr name="battery_meter_title_text_color" format="color"/>
        <attr name="battery_meter_percent_text" format="string"/>
        <attr name="battery_meter_percent_text_color" format="color"/>

        <attr name="battery_meter_inner_drawable" format="reference"/>

        <attr name="battery_meter_product_image_src" format="integer"/>
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="batteryMeterStyle" format="reference"/>
    </declare-styleable>
</resources>